<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/linearLayoutTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:background="@drawable/shape_roundcube"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/nameLecture"
                style="@style/TaskTitle"
                android:text="Заголовок лекции" />

            <TextView
                android:id="@+id/textTaskDescription1"
                style="@style/TaskDescription"
                android:text="Описание задания" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:src="@drawable/word" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="98dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/pdf" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="66dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/excel" />
            </LinearLayout>

            <TextView
                android:id="@+id/date"
                style="@style/TaskDescription"
                android:layout_width="221dp"
                android:text="" />
            <!--            <ListView-->
            <!--                android:id="@+id/fileListView"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"/>-->
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>